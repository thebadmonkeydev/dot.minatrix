#!/usr/bin/env bash
#
# setup vim after install
source script/helpers

set -e

if [ -z ${DOTUPDATE+x} ];then
  rm -rf "${HOME}/.vim"
  git clone --recursive https://github.com/carlhuda/janus.git "${HOME}/.vim" \
    || die "Could not clone janus into ${HOME}/.vim"

  pushq "${HOME}/.vim" || die "Could not go into the ${HOME}/.vim"
  rake update folders || die "Rake failed."
  popq
else
  pushq "${HOME}/.vim" || die "Could not go into the ${HOME}/.vim"
  rake update || die "Rake failed."
  popq
fi

