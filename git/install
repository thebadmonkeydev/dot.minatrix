#!/usr/bin/env bash
#
# setup global git settings after install
source script/helpers

inf 'setup git'
# ... nothing to do here, git packages are installed through packages.bash

# Add after install message to set git author config
cat > "$AFTERINSTALL" <<EOF
From Git

  Be sure to setup your git author config in ~/.gitconfig.local:

    [core]
      name = YOUR_NAME
      email = YOUR_EMAIL

End Git
EOF

inf 'installing hub'

# Clone the newest hub
git clone https://github.com/github/hub.git -q

# In hub.git directory
pushq ./hub

# build hub binary
./script/build >/dev/null

# move built binary to $DOTFILES/bin/hub
yes | cp -rf ./bin/hub $DOTFILES/bin/hub
chmod +x $DOTFILES/bin/hub

# reset dir
popq

rm -rf ./hub

