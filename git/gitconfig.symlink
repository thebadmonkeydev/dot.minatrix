# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local
[alias]
  co    = checkout
  st    = status
  count = !git shortlog -sn
[color]
  diff   = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
  editor = vim
[commit]
  template = ~/.gitmessage
[help]
  autocorrect = 1
[push]
  default = simple
[pull]
  rebase = true
[diff "ruby"]
  wordRegex = (@@?|\\b:|[^:]:)?[[:alnum:]_]+|:\"[^\"]+\"|::|[^[:space:]]
